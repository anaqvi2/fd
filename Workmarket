resume<-scan("/Users/ABUTURAB/Desktop/resume1.txt", what = "character")
split=function(i){
  parsed<-strsplit(resume[i], "")
  return(parsed)
}
resume_parse<-lapply(1:length(resume), split)
resume_parse1<-unlist(resume_parse)
resume_parse2<-tolower(resume_parse1)
resume_parse3<-gsub("[[:punct:]]", "", resume_parse2)
resume_parse4<-resume_parse2[resume_parse3 !=""]
count<-count(resume_parse4)
count_ordered<-arrange(count, desc(freq))
